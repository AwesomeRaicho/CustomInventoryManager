@{
    string filterBy = ViewBag.CurrentFilterBy;
    string searchString = ViewBag.CurrentSearchString;
    string orderBy = ViewBag.CurrentOrderBy;
    string sortOrder = ViewBag.CurrentSortOrder;
    string columnName = ViewBag.ColumnName;
    string displayName = ViewBag.DisplayName;

    string oppositeSortOrder = (sortOrder == SortOrderOptions.ASC.ToString())
    ? SortOrderOptions.DESC.ToString()
    : SortOrderOptions.ASC.ToString();

}

<th>
    <a href="~/costumes?filterBy=@filterBy&searchString=@searchString&orderBy=@columnName&sortOrder=@oppositeSortOrder">@displayName</a>
</th>

